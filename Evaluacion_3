ALTER SESSION SET NLS_DATE_FORMAT = 'DD/MM/YY';

DROP TABLE Formulario_Ingreso CASCADE CONSTRAINTS;
DROP TABLE Sindicatos CASCADE CONSTRAINTS;
DROP TABLE Solicitud_Ingreso CASCADE CONSTRAINTS;
